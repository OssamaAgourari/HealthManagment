<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph"
    app:startDestination="@id/loginFragment">

    <!-- Global Actions for Bottom Navigation -->
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="true"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_global_doctorsListFragment"
        app:destination="@id/doctorsListFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="false"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_global_myAppointmentsFragment"
        app:destination="@id/myAppointmentsFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="false"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="false"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_global_bookingChoiceFragment"
        app:destination="@id/bookingChoiceFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="false"
        app:launchSingleTop="true" />

    <action
        android:id="@+id/action_global_patientFormFragment"
        app:destination="@id/patientFormFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="false"
        app:launchSingleTop="true" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.health.ui.auth.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.health.ui.auth.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.health.ui.auth.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.health.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home_new" >
        <action
            android:id="@+id/action_homeFragment_to_myAppointmentsFragment"
            app:destination="@id/myAppointmentsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_patientFormFragment"
            app:destination="@id/patientFormFragment" />
        <action
            android:id="@+id/action_homeFragment_to_bookingChoiceFragment"
            app:destination="@id/bookingChoiceFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookingChoiceFragment"
        android:name="com.example.health.ui.appointment.BookingChoiceFragment"
        android:label="Prendre rendez-vous"
        tools:layout="@layout/fragment_booking_choice" >
        <action
            android:id="@+id/action_bookingChoiceFragment_to_doctorsListFragment"
            app:destination="@id/doctorsListFragment" />
        <action
            android:id="@+id/action_bookingChoiceFragment_to_patientFormFragment"
            app:destination="@id/patientFormFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookApointementsFragment"
        android:name="com.example.health.ui.appointment.BookApointementsFragment"
        android:label="fragment_book_apointements"
        tools:layout="@layout/fragment_book_apointements" />
    <fragment
        android:id="@+id/myAppointmentsFragment"
        android:name="com.example.health.ui.appointment.MyAppointmentsFragment"
        android:label="fragment_my_appointments"
        tools:layout="@layout/fragment_my_appointments" >
        <action
            android:id="@+id/action_myAppointmentsFragment_to_bookApointementsFragment"
            app:destination="@id/bookApointementsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.health.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.health.ui.profile.EditProfileFragment"
        android:label="Modifier le profil"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/patientFormFragment"
        android:name="com.example.health.ui.appointment.PatientFormFragment"
        android:label="PatientFormFragment" />
    <fragment
        android:id="@+id/doctorsListFragment"
        android:name="com.example.health.ui.doctor.DoctorsListFragment"
        android:label="Médecins" >
        <action
            android:id="@+id/action_doctorsListFragment_to_doctorDetailsFragment"
            app:destination="@id/doctorDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/doctorDetailsFragment"
        android:name="com.example.health.ui.doctor.DoctorDetailsFragment"
        android:label="Détails médecin" >
        <action
            android:id="@+id/action_doctorDetailsFragment_to_bookApointementsFragment"
            app:destination="@id/bookApointementsFragment" />
        <action
            android:id="@+id/action_doctorDetailsFragment_to_bookAppointmentFormFragment"
            app:destination="@id/bookAppointmentFormFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookAppointmentFormFragment"
        android:name="com.example.health.ui.appointment.BookAppointmentFormFragment"
        android:label="Prendre rendez-vous"
        tools:layout="@layout/fragment_book_appointment_form" />
</navigation>
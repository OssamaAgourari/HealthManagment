<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.health.ui.auth.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.health.ui.auth.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.health.ui.auth.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.health.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_myAppointmentsFragment"
            app:destination="@id/myAppointmentsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_patientFormFragment"
            app:destination="@id/patientFormFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookApointementsFragment"
        android:name="com.example.health.ui.appointment.BookApointementsFragment"
        android:label="fragment_book_apointements"
        tools:layout="@layout/fragment_book_apointements" />
    <fragment
        android:id="@+id/myAppointmentsFragment"
        android:name="com.example.health.ui.appointment.MyAppointmentsFragment"
        android:label="fragment_my_appointments"
        tools:layout="@layout/fragment_my_appointments" >
        <action
            android:id="@+id/action_myAppointmentsFragment_to_bookApointementsFragment"
            app:destination="@id/bookApointementsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.health.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/patientFormFragment"
        android:name="com.example.health.ui.appointment.PatientFormFragment"
        android:label="PatientFormFragment" />
</navigation>
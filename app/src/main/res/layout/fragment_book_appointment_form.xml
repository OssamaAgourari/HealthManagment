<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface"
    tools:context=".ui.appointment.BookAppointmentFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="?attr/colorPrimary"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnPrimary"
                android:contentDescription="Retour" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Prendre rendez-vous"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Doctor Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Médecin"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/doctorNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Jean Dupont"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/doctorSpecialtyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardiologue"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/consultationFeeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tarif: 50€"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorSecondary"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Patient Info Card (Read-only) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vos informations"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textAllCaps="true" />

                    <!-- Patient Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom complet"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/patientNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginTop="4dp"
                        android:padding="12dp"
                        android:background="@drawable/edittext_background" />

                    <!-- Patient Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/patientEmailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="john.doe@email.com"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginTop="4dp"
                        android:padding="12dp"
                        android:background="@drawable/edittext_background" />

                    <!-- Patient Phone -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Téléphone"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/patientPhoneText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+33 6 12 34 56 78"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginTop="4dp"
                        android:padding="12dp"
                        android:background="@drawable/edittext_background" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Date Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choisir la date"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:minDate="01/15/2026" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Time Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choisir l'heure"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/selectedDateTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sélectionnez une date et une heure"
                        android:textSize="14sp"
                        android:textColor="?attr/colorSecondary"
                        android:layout_marginTop="8dp" />

                    <GridLayout
                        android:id="@+id/timeSlotsGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:columnCount="3"
                        android:alignmentMode="alignBounds"
                        android:useDefaultMargins="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Reason Card (Optional) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Motif de consultation (optionnel)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <EditText
                        android:id="@+id/reasonEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edittext_background"
                        android:gravity="top|start"
                        android:hint="Décrivez brièvement la raison de votre visite..."
                        android:inputType="textMultiLine"
                        android:padding="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Confirm Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmBookingButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:text="Confirmer le rendez-vous"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:backgroundTint="?attr/colorPrimary" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>


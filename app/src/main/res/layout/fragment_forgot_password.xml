<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#F5F5F5"
        tools:context=".ui.auth.ForgotPasswordFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Green Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#4CAF50"
                android:padding="32dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_lock_idle_lock"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/forgotTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mot de passe oublie"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/forgotSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrez votre email pour recevoir un lien de reinitialisation"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:alpha="0.9"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Form Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Email Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailLayout"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Adresse email"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emailInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Reset Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/resetButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Envoyer le lien"
                        android:textSize="16sp"
                        android:layout_marginTop="24dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#4CAF50" />

                    <!-- Back to Login -->
                    <TextView
                        android:id="@+id/goToLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Retour a la connexion"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:padding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</layout>
